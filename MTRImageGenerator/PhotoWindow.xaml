<metro:Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:metro="http://schemas.codeplex.com/elysium"
	xmlns:params="http://schemas.codeplex.com/elysium/params"
	x:Class="MTRImageGenerator.PhotoWindow"
	Title="Генератор изображений для МТР"
	Height="368"
	Width="570"
	ResizeMode="NoResize"
	Closing="Window_Closing">
	<Grid>
		<WindowsFormsHost
			x:Name="wfhVideoPlayer"
			HorizontalAlignment="Left"
			Height="240"
			Margin="11,10,0,0"
			VerticalAlignment="Top"
			Width="320"
			Panel.ZIndex="-2" />
		<Button
			x:Name="btnCapture"
			Content="Сделать снимок"
			HorizontalAlignment="Left"
			Margin="11,293,0,0"
			VerticalAlignment="Top"
			Width="150"
			Click="btnCapture_Click" />
		<Image
			x:Name="imgPhoto"
			HorizontalAlignment="Left"
			Height="240"
			Margin="370,10,0,0"
			VerticalAlignment="Top"
			Width="180" />
		<Button
			x:Name="btnSave"
			Content="Сохранить"
			HorizontalAlignment="Left"
			Margin="370,293,0,0"
			VerticalAlignment="Top"
			Width="180"
			Click="btnSave_Click"
			IsEnabled="False" />
		<Rectangle
			HorizontalAlignment="Left"
			Height="31"
			Margin="11,255,0,0"
			Stroke="Lime"
			StrokeThickness="3"
			VerticalAlignment="Top"
			Width="150" />
		<Label
			Content="Ширина   фото"
			HorizontalAlignment="Left"
			Margin="17,254,0,0"
			VerticalAlignment="Top"
			FontFamily="Kozuka Mincho Pro H" />

	</Grid>
</metro:Window>
